<UserControl x:Class="SPS.App.Views.Components.ParameterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SPS.App.Views.Components"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="360"
             MinHeight="56"
             x:Name="Self">

    <Grid VerticalAlignment="Center" Margin="0,8,0,8" MinHeight="60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="C0" />
            <ColumnDefinition Width="*" SharedSizeGroup="C1" />
            <ColumnDefinition Width="82" SharedSizeGroup="C3" />
            <ColumnDefinition Width="Auto" SharedSizeGroup="C4" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="{Binding Title, ElementName=Self}"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Margin="0,0,12,0" />

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,12,0">
            <Slider Value="{Binding Value, ElementName=Self, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="{Binding Minimum, ElementName=Self}"
                    Maximum="{Binding Maximum, ElementName=Self}"
                    TickPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    TickFrequency="{Binding StepSmall, ElementName=Self}"
                    IsMoveToPointEnabled="True"
                    AutoToolTipPrecision="2"
                    Style="{StaticResource ParameterSliderStyle}"
                    Height="32"
                    Margin="0,0,0,4"
                    HorizontalAlignment="Stretch" />
            <TextBlock Text="{Binding MinLabel, ElementName=Self}"
                       FontSize="10"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       Margin="0,2,0,0" />
        </StackPanel>

        <TextBox x:Name="NumericTextBox"
                 Grid.Column="2"
                 VerticalAlignment="Center"
                 Width="82"
                 HorizontalAlignment="Left"
                 TextAlignment="Right"
                 KeyDown="NumericTextBox_KeyDown"
                 LostFocus="NumericTextBox_LostFocus"
                 Loaded="NumericTextBox_Loaded"
                 Style="{StaticResource ParameterNumericTextBoxStyle}" />

        <TextBlock Grid.Column="3"
                   Text="{Binding Unit, ElementName=Self}"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0" />
    </Grid>
</UserControl>
